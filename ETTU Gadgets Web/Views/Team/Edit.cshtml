@model ETTU_Gadgets_Web.Models.Person

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Person</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.BoatId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("BoatId", "Select a Boat")
            @Html.ValidationMessageFor(model => model.BoatId)
        </div>

        @Html.Partial("_UploadImage", new ViewDataDictionary{{ "Person", Model }})
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { id = Model.BoatId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
