@model ETTU_Gadgets_Web.Models.Boat

@{
    ViewBag.Title = "EditTeam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Team</h2>
@Html.ActionLink("Back", "Index", new { id=Model.Id }) |
@Html.ActionLink("Add", "Create", new { id=Model.Id })
<ul>
    @foreach (ETTU_Gadgets_Web.Models.Person person in Model.Crew)
    {
        <li>
            @Html.ActionLink("Edit", "Edit", new { id=person.Id}) |
            @Html.ActionLink("Delete", "Delete", new { id=person.Id}) |
            @Html.DisplayNameFor(modelItem => person.Name) : @person.Name
        </li>
        
    }
</ul>